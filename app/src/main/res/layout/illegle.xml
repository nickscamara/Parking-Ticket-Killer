<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/illigle"
    android:background="#20000000">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/upperlayout"
        android:layout_width="240dp"
        android:layout_height="259dp"
        android:background="@drawable/markerboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363">
        <EditText
            android:paddingStart="10dp"
            android:hint="Please descript the detail of the location and car model"
            android:textColorHint="#77000000"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#22000000"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/comment"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="submit"

            app:layout_constraintTop_toBottomOf="@+id/comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:id="@+id/submit"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:background="@color/bgdColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upperlayout"
        >


        <TextView
            android:id="@+id/parkidtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Report Illegal Parking"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>