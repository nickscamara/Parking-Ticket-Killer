<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportboard"
    android:background="#33000000">
    <android.support.constraint.Guideline
        android:id="@+id/Bottom_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />
    <android.support.constraint.ConstraintLayout
        android:layout_height="150dp"
        android:layout_width="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Bottom_guideline"
        android:background="@drawable/markerboard">
        <android.support.constraint.Guideline
            android:id="@+id/Top_guideline1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33" />
        <android.support.constraint.Guideline
            android:id="@+id/Middle_guideline1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:text = "Help"
            android:id="@+id/help"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Top_guideline1"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"

            android:text = "Report"
            android:id="@+id/report"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Top_guideline1"
            app:layout_constraintBottom_toTopOf="@+id/Middle_guideline1"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:text = "other"
            android:id="@+id/other"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Middle_guideline1"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="@+id/Top_guideline1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="@+id/Middle_guideline1"
            />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>